{
	"manifest_version": 2,
	"name": "VLC Remote",
	"version": "0.8.1",
	"description": "Remotely control VLC's web interface.",
	"icons": {
				"16": "icon16.png",
				"48": "icon48.png",
				"128": "icon128.png"
			},
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "icon128.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"contextMenus"
	],
	"optional_permissions": [
		"http://*/"
	],
	"background" : { 
		"page": "background.html"
	}
}